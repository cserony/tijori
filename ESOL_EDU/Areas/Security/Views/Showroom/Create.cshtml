@using Kendo.Mvc.UI
@model ESOL_BO.DbAccess.Security.ShowroomDomain

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="head">
    <div class="main-bar row">
        <div class="col-sm-5 col-lg-6 skin_txt">
            <h4 class="nav_top_align"><i class="fa fa-pencil"></i>Branch Manage</h4>
        </div>
        <div class="col-sm-7 col-lg-6">
            <ol class="breadcrumb float-xs-right nav_breadcrumb_top_align">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { Area = "" })"><i data-tags="" data-pack="default" class="fa fa-home"></i>Administration</a></li>
                <li class="breadcrumb-item">Security</li>
                <li class="active breadcrumb-item">Branch Information</li>
            </ol>
        </div>
    </div>
</header>
<div class="outer">
    <div class="inner bg-container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-white">Input Fields</div>
                    <div id="dvmessage">
                        @if (@ViewBag.Message != null)
                        {
                            <p style="color: green; margin-left: 18px;">@ViewBag.Message </p>
                        }
                        @if (@ViewBag.Error != null)
                        {
                            <p style="color: red">@ViewBag.Error </p>
                        }
                    </div>
                    <div class="card-block">
                        @using (Html.BeginForm("Create", "Showroom", FormMethod.Post, new { @id = "createform", @class = "contact_form" }))
                        {
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.BranchId)
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Branch Code</label>
                                        @Html.TextBoxFor(model => model.BranchCode, new { @class = "form-control input-sm" })
                                    </div>
                                    <div class="form-group">
                                        <label>Branch Name</label><span style="color: #f2731e;font-weight: bold;margin-left: 2px;">*</span>
                                        @Html.TextBoxFor(model => model.BranchName, new { @class = "form-control input-sm" })
                                    </div>   
                                    <div class="form-group">
                                        <label>Contact Person</label><span style="color: #f2731e;font-weight: bold;margin-left: 2px;">*</span>
                                        @Html.TextBoxFor(model => model.ContactPerson, new { @class = "form-control input-sm" })
                                    </div>                                 
                                </div>
                                <div class="col-md-4">                                    
                                    <div class="form-group">
                                        <label>Mobile No.</label><span style="color: #f2731e;font-weight: bold;margin-left: 2px;">*</span>
                                        @Html.TextBoxFor(model => model.MobileNo, new { @class = "form-control input-sm"})
                                    </div>
                                    <div class="form-group">
                                        <label>E-mail</label><span style="color: #f2731e;font-weight: bold;margin-left: 2px;">*</span>
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-sm" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Address</label><span style="color: #f2731e;font-weight: bold;margin-left: 2px;">*</span>
                                        @Html.TextAreaFor(model => model.Address, new { @class = "form-control input-sm", @style = "height: 67px;" })
                                    </div>
                                    <div class="form-group">
                                        <label>Active or Inactive</label>
                                        @Html.CheckBoxFor(model => model.IsActive, new { })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="submit" class="btn btn-success btn-sm" value="Save" />
                                    <button class="btn btn-danger btn-sm" id="btncancel" type="button">Go to list</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/js/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#CompanyName").focus();
        $("#btnSave").click(function () {
            $("#createform").submit();
        });
        $("#btncancel").click(function () {
            if (confirm("Do You Want To Cancel this page?")) {
                location.href = '@Url.Action("Index", "Showroom", new { Area = "Security" })';
            }
        });
    });
</script>

