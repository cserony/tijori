@model ESOL_BO.DbAccess.Security.CompanyDomain

@{
    ViewBag.Title = "Company Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="head">
    <div class="main-bar row">
        <div class="col-sm-5 col-lg-6 skin_txt">
            <h4 class="nav_top_align"><i class="fa fa-pencil"></i>Company Information</h4>
        </div>
        <div class="col-sm-7 col-lg-6">
            <ol class="breadcrumb float-xs-right nav_breadcrumb_top_align">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { Area = "" })"><i data-tags="" data-pack="default" class="fa fa-home"></i>Dashboard</a></li>
                <li class="breadcrumb-item">Admin</li>
                <li class="active breadcrumb-item">Company Information</li>
            </ol>
        </div>
    </div>
</header>
<div class="outer">
    <div class="inner bg-container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-white">Institute Profile</div>
                    <div class="card-block">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="card inline_section_align">
                                    <div class="card-header bg-white">
                                        General Information 
                                    </div>
                                    <div class="card-block">
                                        <span class="text-success">Name:</span> @Html.DisplayFor(model => model.OrgName)<br />
                                        <span class="text-success">Chaiman:</span> @Html.DisplayFor(model => model.ContactPerson)<br />
                                        <span class="text-success">Principal:</span> @Html.DisplayFor(model => model.Web)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card inline_section_align">
                                    <div class="card-header bg-white">
                                        Contact Information
                                    </div>
                                    <div class="card-block">
                                        <span class="text-success">Mobile No.:</span> @Html.DisplayFor(model => model.MobileNo)<br />
                                        <span class="text-success">E-mail:</span> @Html.DisplayFor(model => model.Email)<br />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card inline_section_align">
                                    <div class="card-header bg-white">
                                        Others Information
                                    </div>
                                    <div class="card-block">
                                        <span class="text-success">Present Address:</span> @Html.DisplayFor(model => model.AddressLine1)<br/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <p style="margin-left: 19px;">@Html.ActionLink("Go to list", "Index")</p>
                </div>
            </div>
        </div>
    </div>
</div>

